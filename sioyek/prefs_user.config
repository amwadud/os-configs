# Sioyek Gruvbox Material Soft Theme Configuration

# Custom Color Contrast
custom_color_contrast 0.0

# Page Separator Width
page_separator_width 1

# Background and Text Colors
custom_background_color #323232
custom_text_color #A89984

# Empty Background Color in Color Mode
custom_color_mode_empty_background_color #d3869b

# Page Separator Color
page_separator_color #323232

# Search Highlight Color
search_highlight_color #d8a657

# Status Bar Colors
status_bar_color #3c3836
status_bar_text_color #d4be98

# Dark Mode Background Color
dark_mode_background_color #282828

# Text Highlight Color
text_highlight_color #f9ca88

# Smooth Scrolling Settings
smooth_scroll_speed 3
smooth_scroll_drag 4000

# Custom Commands
new_command _read_selected_text espeak "%{selected_text}"
new_command _open_notes_in_terminal /home/eren/.config/sioyek/bin/open-note "%{file_path}"
new_command _translate_to_ar /home/eren/.config/sioyek/bin/translate-to-ar "%{highlighted_text}"

# Startup Commands
startup_commands toggle_smooth_scroll_mode;toggle_custom_color;toggle_statusbar



